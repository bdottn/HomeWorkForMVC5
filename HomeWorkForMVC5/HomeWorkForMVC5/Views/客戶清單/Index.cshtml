@using HomeWorkForMVC5.Models
@model IEnumerable<客戶清單>

@{
    ViewBag.Title = "客戶清單列表";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-6">
            <div id="custom-search-input">
                <div class="input-group col-md-7">
                    <input id="search" name="search" type="search" class="form-control input-lg" accesskey="S" placeholder="請輸入客戶名稱（Alt + S）" value="@ViewBag.search" />
                    <span class="input-group-btn">
                        <button class="btn btn-info btn-lg" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.客戶名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.聯絡人數量)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.銀行帳戶數量)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.客戶名稱, "Index", "客戶資料", new { search = item.客戶名稱 }, null)
            </td>
            <td>
                @Html.ActionLink(item.聯絡人數量.ToString(), "Index", "客戶聯絡人", new { search = item.客戶名稱 }, null)
            </td>
            <td>
                @Html.ActionLink(item.銀行帳戶數量.ToString(), "Index", "客戶銀行資訊", new { search = item.客戶名稱 }, null)
            </td>
        </tr>
    }

</table>